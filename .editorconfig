# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# Java files
[*.java]
indent_style = space
indent_size = 4

# XML files
[*.{xml,xml.dist,xsd,xsl,xslt}]
indent_style = space
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false

# Batch files
[*.{cmd,bat}]
end_of_line = crlf

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2

# Gitignore and similar files
[.git{attributes,config,ignore,keep,mailmap,modules,ttributes}]
indent_style = tab

# Maven and Gradle files
[pom.xml]
indent_style = space
indent_size = 2

[build.gradle]
indent_style = space
indent_size = 2

# Properties files
[*.properties]
indent_style = space
indent_size = 4

# SQL files
[*.sql]
indent_style = space
indent_size = 4

# Docker files
[Dockerfile*]
indent_style = space
indent_size = 4

# YAML front matter in markdown files
[*.md]
indent_size = 2

# Ignore package-lock.json and yarn.lock
[package-lock.json]
indent_style = space
indent_size = 2

[yarn.lock]
indent_style = space
indent_size = 2
